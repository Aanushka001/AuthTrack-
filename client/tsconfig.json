{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@services/*": ["services/*"],
      "@hooks/*": ["hooks/*"],
      "@components/*": ["components/*"]
    }
  },
  "include": [
    "../server/src/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
